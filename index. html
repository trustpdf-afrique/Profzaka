    function genererFiche() {
      const texte = document.getElementById("cours").value;

      const titre = texte.split("\n")[0] || "(Titre non d√©tect√©)";
      const idee = "Ce cours parle de " + (texte.split(".")[0] || "...");

      const motsCles = [...texte.matchAll(/(\b\w+\b)\s*[:=]\s*[^.,\n]+/g)].map(m => `- ${m[0]}`).join("\n");
      const parties = texte.split(/\n{2,}/).slice(1, 4).map(p => `- ${p.trim().slice(0, 100)}...`).join("\n");
      const questions = [
        "1. Quel est le sujet principal ?",
        "2. Donne deux mots-cl√©s du cours.",
        "3. Quelle est une information importante ?"
      ].join("\n");
      const astuce = "Essaie de r√©p√©ter avec tes propres mots !";

      document.getElementById("titre").innerText = titre;
      document.getElementById("idee").innerText = idee;
      document.getElementById("mots").innerText = motsCles || "(Aucun mot-cl√© trouv√©)";
      document.getElementById("contenu").innerText = parties || "(Contenu non trouv√©)";
      document.getElementById("questions").innerText = questions;
      document.getElementById("astuce").innerText = astuce;

      document.getElementById("fiche").style.display = "block";
    }
  </script></body>
